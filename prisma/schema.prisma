generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  name           String
  email          String         @unique
  role           Role
  employmentType EmploymentType
  managerId      String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  leaveBalance   LeaveBalance?
  leaveRequests  LeaveRequest[]
  manager        User?          @relation("UserManager", fields: [managerId], references: [id])
  teamMembers    User[]         @relation("UserManager")
}

model LeaveBalance {
  id           String   @id @default(cuid())
  userId       String   @unique
  casualTotal  Int      @default(0)
  casualUsed   Int      @default(0)
  earnedTotal  Int      @default(0)
  earnedUsed   Int      @default(0)
  medicalTotal Int      @default(0)
  medicalUsed  Int      @default(0)
  unpaidUsed   Int      @default(0)
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model LeaveRequest {
  id                 String      @id @default(cuid())
  userId             String
  leaveType          LeaveType
  startDate          DateTime
  endDate            DateTime
  isHalfDay          Boolean     @default(false)
  reason             String
  responsibilityTo   String
  status             LeaveStatus @default(PENDING_MANAGER)
  managerId          String?
  directorId         String?
  managerDecisionAt  DateTime?
  directorDecisionAt DateTime?
  rejectionReason    String?
  createdAt          DateTime    @default(now())
  user               User        @relation(fields: [userId], references: [id])
}

model Holiday {
  id          String   @id @default(cuid())
  date        DateTime @unique
  name        String
  description String?
}

enum Role {
  EMPLOYEE
  MANAGER
  PROJECT_DIRECTOR
  HR
  ACCOUNTS
  ADMIN
  PROCUREMENT
}

enum EmploymentType {
  INTERN
  ADHOC
  PAYROLL
}

enum LeaveType {
  CASUAL
  EARNED
  MEDICAL
  UNPAID
}

enum LeaveStatus {
  PENDING_MANAGER
  PENDING_DIRECTOR
  APPROVED
  REJECTED_MANAGER
  REJECTED_DIRECTOR
}
