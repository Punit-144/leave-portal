generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  // CHANGED: used uuid() to match Supabase Auth standard
  id             String         @id @default(uuid())
  name           String
  email          String         @unique
  role           Role
  employmentType EmploymentType
  managerId      String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  leaveBalance   LeaveBalance?
  leaveRequests  LeaveRequest[]
  
  // Self-relation for Manager hierarchy
  manager        User?          @relation("UserManager", fields: [managerId], references: [id])
  teamMembers    User[]         @relation("UserManager")
}

model LeaveBalance {
  id           String   @id @default(uuid())
  userId       String   @unique
  
  // Logic: For Adhoc, set casualTotal = 4. For Interns, all 0.
  casualTotal  Int      @default(0)
  casualUsed   Int      @default(0)
  
  earnedTotal  Int      @default(0)
  earnedUsed   Int      @default(0)
  
  medicalTotal Int      @default(0)
  medicalUsed  Int      @default(0)
  
  unpaidUsed   Int      @default(0)
  
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model LeaveRequest {
  id                String      @id @default(uuid())
  userId            String
  leaveType         LeaveType
  
  startDate         DateTime
  endDate           DateTime
  isHalfDay         Boolean     @default(false)
  
  // NEW: Essential for reports so you don't have to recalculate weekends every time
  daysCount         Float       @default(1.0)
  
  reason            String
  responsibilityTo  String
  
  status            LeaveStatus @default(PENDING_MANAGER)
  
  managerId         String?
  directorId        String?
  
  managerDecisionAt DateTime?
  directorDecisionAt DateTime?
  
  rejectionReason   String?
  
  createdAt         DateTime    @default(now())
  user              User        @relation(fields: [userId], references: [id])
}

model Holiday {
  id          String   @id @default(uuid())
  date        DateTime @unique
  name        String
  description String?
}

enum Role {
  EMPLOYEE
  MANAGER
  PROJECT_DIRECTOR
  HR
  ACCOUNTS
  ADMIN
  PROCUREMENT
}

enum EmploymentType {
  INTERN
  ADHOC
  PAYROLL
}

enum LeaveType {
  CASUAL
  EARNED
  MEDICAL
  UNPAID
}

enum LeaveStatus {
  PENDING_MANAGER
  PENDING_DIRECTOR
  APPROVED
  REJECTED_MANAGER
  REJECTED_DIRECTOR
  CANCELLED          // NEW: Added for when user cancels their own request
}