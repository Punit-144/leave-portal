generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

enum Role {
  EMPLOYEE
  MANAGER
  PROJECT_DIRECTOR
  HR
  ACCOUNTS
  ADMIN
  PROCUREMENT
}

enum EmploymentType {
  INTERN
  ADHOC
  PAYROLL
}

enum LeaveType {
  CASUAL
  EARNED
  MEDICAL
  UNPAID
}

enum LeaveStatus {
  PENDING_MANAGER
  PENDING_DIRECTOR
  APPROVED
  REJECTED_MANAGER
  REJECTED_DIRECTOR
}

model User {
  id              String           @id @default(cuid())
  name            String
  email           String           @unique
  role            Role
  employmentType  EmploymentType

  managerId       String?
  manager         User?            @relation("UserManager", fields: [managerId], references: [id])
  teamMembers     User[]            @relation("UserManager")

  leaveRequests   LeaveRequest[]
  leaveBalance    LeaveBalance?

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model LeaveBalance {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])

  casualTotal   Int      @default(0)
  casualUsed    Int      @default(0)

  earnedTotal   Int      @default(0)
  earnedUsed    Int      @default(0)

  medicalTotal  Int      @default(0)
  medicalUsed   Int      @default(0)

  unpaidUsed    Int      @default(0)

  updatedAt     DateTime @updatedAt
}

model LeaveRequest {
  id                 String      @id @default(cuid())

  userId             String
  user               User        @relation(fields: [userId], references: [id])

  leaveType          LeaveType
  startDate          DateTime
  endDate            DateTime
  isHalfDay          Boolean     @default(false)

  reason             String
  responsibilityTo   String

  status             LeaveStatus @default(PENDING_MANAGER)

  managerId          String?
  directorId         String?

  managerDecisionAt  DateTime?
  directorDecisionAt DateTime?

  rejectionReason    String?

  createdAt          DateTime    @default(now())
}

model Holiday {
  id          String   @id @default(cuid())
  date        DateTime @unique
  name        String
  description String?
}
